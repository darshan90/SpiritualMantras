<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageRL1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alertdialogshape" >

    <TextView
        android:id="@+id/dialogTitle1"
        style="@style/dialogTitleStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_theme_gradient"
        android:gravity="center_horizontal"
        android:padding="3.0dip"
        android:text="Network Alert"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogTitle1"
        android:padding="10.0dip" >

        <TextView
            android:id="@+id/dialog_message1"
            style="@style/dialogMessagesStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:gravity="center_horizontal"
            android:text="Please check your internet connectivity."
            android:textColor="@color/colorforText"
            />

        <Button
            android:id="@+id/positiveButton1"
            style="@style/redButtonSkip"
            android:layout_width="100.0dip"
            android:layout_height="30.0dip"
            android:layout_below="@id/dialog_message1"
            android:layout_marginTop="20.0dip"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Ok" />

    </RelativeLayout>

</RelativeLayout>